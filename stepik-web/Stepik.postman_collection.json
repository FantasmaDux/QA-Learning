    {
      "name": "Account",
      "item": [
        {
          "name": "Delete account code 302",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const token = pm.collectionVariables.get('temp_csrf_token');\r",
                  "if (token) {\r",
                  "    pm.request.headers.upsert({\r",
                  "        key: 'X-CSRFToken',\r",
                  "        value: token\r",
                  "    });\r",
                  "    \r",
                  "    const requestBody = pm.request.body.raw;\r",
                  "    if (requestBody && requestBody.includes('{{temp_csrf_token}}')) {\r",
                  "        pm.request.body.raw = requestBody.replace(\r",
                  "            '{{temp_csrf_token}}', \r",
                  "            token\r",
                  "        );\r",
                  "    }\r",
                  "} else {\r",
                  "    console.log('Токен не найден. Сначала выполните вход');\r",
                  "}\r",
                  "\r",
                  "pm.request.headers.upsert({\r",
                  "    key: 'Accept',\r",
                  "    value: 'text/html,application/xhtml+xml,application/xml;q=0.9,image/avif,image/webp,image/apng,*/*;q=0.8'\r",
                  "});"
                ],
                "type": "text/javascript",
                "packages": {},
                "requests": {}
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Referer",
                "value": "https://stepik.org",
                "type": "text"
              }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                {
                  "key": "csrfmiddlewaretoken",
                  "value": "{{temp_csrf_token}}",
                  "type": "text",
                  "uuid": "cbb30254-67fe-43d3-9ac2-b2681e272974"
                },
